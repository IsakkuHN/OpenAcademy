<odoo>
    <data>
    <!--Tre view course-->
    <record model="ir.ui.view" id="open_academy.course_tree">
      <field name="name">Course List</field>
      <field name="model">open_academy.course</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
        </tree>
      </field>
    </record>
    <!-- open_academy.course search view -->
    <record id="model_name_view_search" model="ir.ui.view">
        <field name="name">open_academy.course.view.search</field>
        <field name="model">open_academy.course</field>
        <field name="arch" type="xml">
            <search string="Search Description">
                <field name="title"/>
                <field name="description"/>
                <filter name="mis_cursos" string="Mis Cursos" domain="[('responsible_id', '=', uid)]"/>
                <group string="Agrupar por">
                    <filter name="por Encargado" string="Encargado" context="{'group_by': 'responsible_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- open_academy.course form view -->
    <record id="model_name_view_form" model="ir.ui.view">
        <field name="name">open_academy.course.view.form</field>
        <field name="model">open_academy.course</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                        <field name="description" placeholder="a short description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- open_academy.session tree view -->
    <record id="open_academy_session_tree" model="ir.ui.view">
        <field name="name">open_academy.session</field>
        <field name="model">open_academy.session</field>
        <field name="arch" type="xml">
            <tree decoration-danger="duration&gt;15" decoration-info="duration&lt;5">
                <!-- Add your fields here -->
                <field name="name"/>
                <field name="instructor_id"/>
                <field name="description"/>
                <field name="asistencia" widget="progressbar"/>
                <field name="duration" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action 
            Menu y acciones del modelo de Sesiones    
    -->
    <record model="ir.actions.act_window" id="action_list_session">
        <field name="name">Sessions</field>
        <field name="res_model">open_academy.session</field>
        <field name="view_mode">tree,form,calendar,graph</field>
    </record>
    <menuitem id="menu_sessions" name="Sessions" parent="menu_open_academy" action="action_list_session" sequence="10"/>
   
    <!--Menu y Acciones del modelo de Cursos-->
    <record model="ir.actions.act_window" id="action_list_course">
        <field name="name">Courses</field>
        <field name="res_model">open_academy.course</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="menu_open_academy" name="OpenAcademy" sequence="10"/>
    <menuitem id="menu_course" parent="menu_open_academy" name="Courses" sequence="10"
          action="action_list_course"/>

    <!-- res.partner form view -->
    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.inherited</field>
        <field name="model">res.partner</field>
        <field name="name"> </field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <!-- Add your fields here -->
                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- open_academy.session form view -->
    <record id="model_name_view_form" model="ir.ui.view">
        <field name="name">open_academy.session.view.form</field>
        <field name="model">open_academy.session</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="start_date"/>
                        <field name="duration"/>
                        <field name="cupos"/>
                        <field name="instructor_id"/>
                        <field name="course_id"/>
                        <field name="asistencia" widget="progressbar"/>
                        <field name="activo"/>
                        <field name="fecha_final"/>
                    </group>
                    <notebook>
                        <page string="Asistentes">
                            <field name="attendee_id"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!--Calendario-->

    <record model="ir.ui.view" id="session_calendar_view">
      <field name="name">open_academy.session.calendar</field>
      <field name="model">open_academy.session</field>
      <field name="arch" type="xml">
        <calendar string="Session Calendar" date_start="start_date" date_stop="fecha_final" color="instructor_id">
          <field name="name"/>
        </calendar>
      </field>
    </record>

    <!--Grafico-->

    <!-- open_academy.session graph view -->
    <record id="model_name_view_graph" model="ir.ui.view">
        <field name="name">open_academy.session.view.graph</field>
        <field name="model">open_academy.session</field>
        <field name="arch" type="xml">
            <graph string="Asistentes por Curso">
                <!-- Add your fields here -->   
                <field name="course_id"/>
                <field name="asistentes_curso" type="measure" />
            </graph>
        </field>
    </record>
    </data>
</odoo>
